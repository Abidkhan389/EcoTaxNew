@model IEnumerable<GreenLife.Models.ProductionCategory>
@{

    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Category";
}
<h2 style="color: whitesmoke;background: gray;width: 130px;padding-top: 2px;margin-left: 2px;">Category</h2>
<p>
    <a asp-action="Create" class="btn btn-primary" style="margin-top:2px; margin-left:2px; ">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <div>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.CategoryId"
                           class="btn btn-primary m-1" style="width:68px !important; height:37px !important">Edit</a>
                        <form asp-action="Delete" asp-controller="Product" asp-route-id="@item.CategoryId" method="post" style="display: inline !important">

                            <span id="confirmDeleteSpan_@item.CategoryId" style="display:none">
                                <span>Are You Sure you want to delete?</span>
                                <button type="submit" class="btn btn-danger">Yes</button>
                                <a href="#" class="btn btn-primary"
                                   onclick="confirmDelete('@item.CategoryId', false)">No</a>
                            </span>
                            <span id="DeleteSpan_@item.CategoryId">
                                <a href="#" class="btn btn-danger m-1"
                                   onclick="confirmDelete('@item.CategoryId', true)">Delete</a>
                            </span>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script src="~/js/site.js"></script>
}
