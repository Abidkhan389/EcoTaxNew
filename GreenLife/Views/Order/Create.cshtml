@model GreenLife.ViewModels.SalesOrderViewModel

<h4>SalesOrderViewModel</h4>
<hr />
<form enctype="multipart/form-data" asp-controller="Order" asp-action="Create" method="post" class="m-3">

    <div class="row">
        <div class="col-md-4">
                <div asp-validation-summary="All" class="text-danger"></div>

               

                <div class="form-group">
                    <label class="control-label">select custoer </label>
                    @Html.DropDownList("CustomerId", new SelectList(Model.customerslist, "CustomerId", "FirstName"))
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="choseorderstatus" /> IsOrdered
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="OrderDate" class="control-label"></label>
                    <input asp-for="OrderDate" class="form-control" />
                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RequiredDate" class="control-label"></label>
                    <input  asp-for="RequiredDate" class="form-control" />
                    <span asp-validation-for="RequiredDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ShippedDate" class="control-label"></label>
                    <input asp-for="ShippedDate" class="form-control" />
                    <span asp-validation-for="ShippedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">select Store</label>
                    @Html.DropDownList("StoreId", new SelectList(Model.storeslist, "StoreId", "StoreName"))
                </div>
                <div class="form-group">
                    <label class="control-label">select staff </label>
                    @Html.DropDownList("StaffId", new SelectList(Model.stafflist, "StaffId", "FirstName"))
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
           
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</form>
