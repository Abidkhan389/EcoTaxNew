@model GreenLife.ViewModels.ProductionBrandViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edit Brand";
}
<h4>Edit Brand</h4>
<hr />
<form enctype="multipart/form-data" asp-controller="Brand" asp-action="Edit" method="post" class="m-3">
    <div class="row">
        <div class="col-md-4">
            <input hidden asp-for="BrandId" />


            <div class="form-group">
                <label asp-for="BrandName" class="control-label"></label>
                <input asp-for="BrandName" class="form-control" />
                <span asp-validation-for="BrandName" class="text-danger"></span>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary ">Update</button>
            <a asp-action="Index" class="btn btn-primary ">Cancel</a>
        </div>
    </div>

</form>

