@model GreenLife.ViewModels.ProductionBrandViewModel

<h4>Brand</h4>
<hr />
<form enctype="multipart/form-data" asp-controller="Brand" asp-action="Create" method="post" class="m-3">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="BrandName" class="control-label"></label>
                <input asp-for="BrandName" class="form-control" />
