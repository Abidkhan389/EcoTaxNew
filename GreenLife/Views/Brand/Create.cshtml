            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>

        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</form>

