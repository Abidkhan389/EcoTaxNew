@model GreenLife.ViewModels.City.CityCreateViewModel

<h4>Create City</h4>
<hr />
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group row">
        <input hidden asp-for="cityid" />
        <label asp-for="cityname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="cityname" class="form-control" placeholder="Product Name" />
            <span asp-validation-for="cityname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary ">Update</button>
            <a asp-action="Index" asp-controller="City" class="btn btn-primary ">Cancel</a>
        </div>
    </div>
</form>


