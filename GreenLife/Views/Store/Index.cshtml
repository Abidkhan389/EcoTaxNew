@model IEnumerable<GreenLife.ViewModels.SalesStoreViewModel>
@{

    //Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Store";
}
<h2 style="color: whitesmoke;
        background: gray;
        width: 100px;
        padding-top: 2px;
        margin-left: 2px;">
    Store
</h2>
<p>
    <a asp-action="Create" class="btn btn-primary" style="margin-top:2px; margin-left:2px; ">Create New store</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StoreId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Street)
            </th>
            <th>
                CityName
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StoreName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.citiesname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ZipCode)
                </td>
                <td>
                    <div>
                        <a asp-controller="Store" asp-action="Edit" asp-route-id="@item.StoreId"
                           class="btn btn-primary m-1" style="width:68px !important; height:37px !important">Edit</a>
                        <form asp-action="Delete" asp-controller="Store" asp-route-id="@item.StoreId" method="post" style="display: inline !important">

                            <span id="confirmDeleteSpan_@item.StoreId" style="display:none">
                                <span>Are You Sure you want to delete?</span>
                                <button type="submit" class="btn btn-danger">Yes</button>
                                <a href="#" class="btn btn-primary"
                                   onclick="confirmDelete('@item.StoreId', false)">No</a>
                            </span>
                            <span id="DeleteSpan_@item.StoreId">
                                <a href="#" class="btn btn-danger m-1"
                                   onclick="confirmDelete('@item.StoreId', true)">Delete</a>
                            </span>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts{
    <script src="~/js/site.js"></script>
}
