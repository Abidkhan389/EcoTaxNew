@model GreenLife.ViewModels.ProductionProductEditViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Edit Product";
    var photopath = "~/Images/Product/" + (Model.ExistingPhtopathEdit ?? "Mind.jpg");


}

<form enctype="multipart/form-data" asp-controller="Product" asp-action="Edit" method="post" class="m-3">

    <div class="form-group row">
        <input hidden asp-for="ExistingPhtopathEdit" />
        <input hidden asp-for="ExistingID" />

        <label asp-for="ProductName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ProductName" class="form-control" placeholder="Product Name" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
    </div>
    @*<div class="form-group row">
            <label asp-for="BrandId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="BrandId" class="form-control" placeholder="BrandId" />
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input asp-for="CategoryId" class="form-control" placeholder="Category ID" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>*@
    <div class="form-group">
        <label class="control-label">select brand</label>
        @Html.DropDownList("BrandId", new SelectList(Model.brandlist, "BrandId", "BrandName"))
    </div>
    <div class="form-group">
        <label class="control-label">select Category</label>
        @Html.DropDownList("CategoryId", new SelectList(Model.categorylist, "CategoryId", "CategoryName"))
    </div>
    <div class="form-group row">
        <label asp-for="ModelYear" class="col-sm-2 col-form-label"></label>
        <div class=" col-sm-10">
            <input asp-for="ModelYear" class="form-control" placeholder="Model year" />
            <span asp-validation-for="ModelYear" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ListPrice" class="col-sm-2 col-form-label"></label>
        <div class=" col-sm-10">
            <input asp-for="ListPrice" class="form-control" placeholder="Enter ListPrice " />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">

            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" />
                <label class="custom-file-label">Click here to change photo</label>
            </div>
        </div>
    </div>

    <div class="form-group row col-sm-4 offset-4">
        <img src="@photopath" class="ImageThumbnail" asp-append-version="true" />
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary ">Update</button>
            <a asp-action="AdminIndex" asp-controller="Product " class="btn btn-primary ">Cancel</a>
        </div>
    </div>
    @section Scripts
    {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {

                    var fileName = $(this).val().split("\\").pop();

                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>
