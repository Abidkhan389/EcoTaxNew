@model GreenLife.ViewModels.SalesStaffViewModel

<h4>Sales Staff</h4>
<hr />
<form enctype="multipart/form-data" asp-controller="Staff" asp-action="Create" method="post" class="m-3">

    <div class="row">
        <div class="col-md-4">
               
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
               
                <div class="form-group">
                    <label class="control-label">select Store city</label>
                    @Html.DropDownList("StoreId", new SelectList(Model.storelist, "Id", "StoreName"))
                </div>
                <div class="form-group">
                    <label asp-for="ManagerId" class="control-label"></label>
                    <input asp-for="ManagerId" class="form-control" />
                    <span asp-validation-for="ManagerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="choseactivetype" /> IsActive
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</form>

